        let handle = server.start_background().await.unwrap();
        
        // Give it a moment to start
        tokio::time::sleep(Duration::from_millis(100)).await;
        
        // Send shutdown signal
        handle.abort();
        
        // Should complete without error (ignore the abort error)
        let _ = handle.await;
    }
}
