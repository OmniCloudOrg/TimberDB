            .build()
            .expect("Failed to create HTTP client");
            
        Self {
            client,
            base_url,
        }
    }
    
    async fn is_available(&self) -> bool {
        match self.client
            .get(&format!("{}/api/v1/health", self.base_url))
            .send()
            .await 
